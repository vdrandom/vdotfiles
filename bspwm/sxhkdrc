#
# bspwm hotkeys
#

alt + control + c
	bspc window -c

alt + control + k
	bspc window -k

alt + Return
	bspc window -t fullscreen

alt + {j,k}
	bspc window -f {next,prev}

alt + shift + {j,l}
	bspc window -e {down,right} +32

alt + shift + {k,h}
	bspc window -e {down,right} -32

alt + Tab
	bspc window -t floating

alt + Return
	bspc window -s biggest

alt + {1-9}
	bspc desktop -f {1-9}

alt + shift + {1-9}
	bspc window -d {1-9}

alt + t
	bspc desktop -R 90

alt + m
	bspc desktop -l next

alt + f
	/home/von/.config/bspwm/bsptf

~button{1-3}
	bspc pointer -g focus

alt + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

alt + !button{1-3}
	bspc pointer -t %i %i

alt + @button{1-3}
	bspc pointer -u

alt + x
	termite

alt + {r,u}
	/home/von/.config/bspwm/bspmenu_{run,url}

alt + F2
	dmenu_run

alt + z
	bash -c "until i3lock -entc 661111 -i /home/von/Pictures/wallpaper.png; do :; done"

Print
	xfce4-screenshooter

alt + shift + F12
	/home/von/vscripts/compton_toggle

alt + {Left,Up,Right,Down}
	bspc window --presel {left,up,right,down}

alt + o
	bspc monitor -f {right,left}
